<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/product_name_add"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_weight="4"
            android:hint="Enter the Items Name"
            android:inputType="textCapWords"
            tools:text="Item Name" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/item_icon" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/label_icon" />

        <EditText
            android:id="@+id/product_desc_add"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_weight="4"
            android:hint="Enter a Description"
            android:inputType="textCapSentences"
            tools:text="Item Description" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/pound_sign" />

        <EditText
            android:id="@+id/product_price_add"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_weight="4"
            android:hint="Enter Item's Price"
            android:inputType="numberDecimal"
            tools:text="Item Price" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/item_icon" />

        <EditText
            android:id="@+id/initial_stock_add"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="7dp"
            android:layout_weight="4"
            android:hint="Enter an Initial Stock Level"
            android:inputType="number"
            tools:text="Stock Level" />
    </LinearLayout>

    <ImageView
        android:id="@+id/edit_item_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_margin="25dp"
        android:scaleType="center"
        android:src="@drawable/camera" />


</LinearLayout>